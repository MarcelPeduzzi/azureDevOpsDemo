<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="Taschenrechner" Height="500" Width="350"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Display -->
        <TextBox x:Name="DisplayTextBox" 
                 Grid.Row="0" 
                 Height="60" 
                 Margin="0,0,0,10"
                 FontSize="24"
                 TextAlignment="Right"
                 VerticalContentAlignment="Center"
                 IsReadOnly="True"
                 Text="0"/>

        <!-- Button Grid -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Row 0: Clear and Operations -->
            <Button Content="C" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                    Click="ClearButton_Click" FontSize="20" Margin="2"/>
            <Button Content="÷" Grid.Row="0" Grid.Column="2" 
                    Click="OperationButton_Click" FontSize="20" Margin="2"/>
            <Button Content="×" Grid.Row="0" Grid.Column="3" 
                    Click="OperationButton_Click" FontSize="20" Margin="2"/>

            <!-- Row 1: Numbers 7-9 and Minus -->
            <Button Content="7" Grid.Row="1" Grid.Column="0" 
                    Click="NumberButton_Click" FontSize="20" Margin="2"/>
            <Button Content="8" Grid.Row="1" Grid.Column="1" 
                    Click="NumberButton_Click" FontSize="20" Margin="2"/>
            <Button Content="9" Grid.Row="1" Grid.Column="2" 
                    Click="NumberButton_Click" FontSize="20" Margin="2"/>
            <Button Content="-" Grid.Row="1" Grid.Column="3" 
                    Click="OperationButton_Click" FontSize="20" Margin="2"/>

            <!-- Row 2: Numbers 4-6 and Plus -->
            <Button Content="4" Grid.Row="2" Grid.Column="0" 
                    Click="NumberButton_Click" FontSize="20" Margin="2"/>
            <Button Content="5" Grid.Row="2" Grid.Column="1" 
                    Click="NumberButton_Click" FontSize="20" Margin="2"/>
            <Button Content="6" Grid.Row="2" Grid.Column="2" 
                    Click="NumberButton_Click" FontSize="20" Margin="2"/>
            <Button Content="+" Grid.Row="2" Grid.Column="3" 
                    Click="OperationButton_Click" FontSize="20" Margin="2"/>

            <!-- Row 3: Numbers 1-3 -->
            <Button Content="1" Grid.Row="3" Grid.Column="0" 
                    Click="NumberButton_Click" FontSize="20" Margin="2"/>
            <Button Content="2" Grid.Row="3" Grid.Column="1" 
                    Click="NumberButton_Click" FontSize="20" Margin="2"/>
            <Button Content="3" Grid.Row="3" Grid.Column="2" 
                    Click="NumberButton_Click" FontSize="20" Margin="2"/>

            <!-- Row 4: Zero, Decimal, Equals -->
            <Button Content="0" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" 
                    Click="NumberButton_Click" FontSize="20" Margin="2"/>
            <Button Content="." Grid.Row="4" Grid.Column="2" 
                    Click="DecimalButton_Click" FontSize="20" Margin="2"/>
            <Button Content="=" Grid.Row="3" Grid.Column="3" Grid.RowSpan="2" 
                    Click="EqualsButton_Click" FontSize="20" Margin="2" Background="#FF4CAF50" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
